<main class="container">
    <script src="../public/js/burger.js"></script>
    <div class="row justify-content-center m-2">
        <div class="col-3">
            <img class="burgerPic" src="burgerPic.jpeg" alt="Deconstructued Burger being held by chef">
        </div>
    </div>

    <div class="row mt-4 justify-content-center">
        <div class="col-4 unEatenList m-2">
            <H3>Burgers ready to eat</H3>
            <ol>


                {{#each burger}}
                   {{#unless devoured}}
                <div class="row">
                    <li class="col-7 burgerItem ">

                        <p>{{this.burger_name}}</p>
                    </li>
                    <div class=" col-3 devourBTN" data-id="{{id}}">
                        <button> Devour </button>
                    </div>
                </div>
            {{/unless}}
                {{/each}}

            </ol>
        </div>


        <div class="col-4 eatenList m-2">
            <H3>Burgers already eaten</H3>
            <ol>

                {{#each burger}}
                {{#if devoured}}
              <div class="row">
                    <li class="col-7 burgerItem ">

                        <p>{{this.burger_name}}</p>
                    </li>
                    
                </div>

                {{/if}}
                {{/each}}


            </ol>
        </div>
    </div>

    <div class="row justify-content-center">

        <form>

            <div class="row justify-content-center m-2"></div>
            <textarea id="burgerTxt" type="text" name="addBurger"></textarea>
            <div class="row justify-content-center m-2">
                <button class="submitBtn">Submit</button>
            </div>
        </form>

    </div>
</main>